<div class="container">
  <div class="restaurant-info">
    <h1 class="my-3"><%= @restaurant.name %></h1>
    <h5><%= @restaurant.category %></h5>
    <p><%= @restaurant.address %></p>
    <p>Tel: <%= @restaurant.phone_number %></p>
    </div>

  <div class="reviews">
    <h2 class="my-2">Reviews</h2>
    <%= link_to "Add a new review", new_restaurant_review_path(@restaurant.id) %>
    <div class="review my-3">
      <% @restaurant.reviews.each do |review| %>
        <h4>Rating: <%= review.rating %></h4>
        <h6 class=" pb-3 border-bottom">Content: <%= review.content %></h6>
      <% end %>
    </div>
  </div>
</div>
