<div class="form py-4 border-bottom mb-4">
  <%= simple_form_for(@restaurant) do |f| %>

    <div class="form-group">
      <%= f.input :name %>
    </div>

    <div class="form-group">
      <%= f.input :address %>
    </div>

    <div class="form-group">
      <%= f.input :phone_number %>
    </div>

    <div class="form-group">
      <%= f.label :category %>
      <%= f.select(:category, ["chinese", "italian", "japanese", "french", "belgian"]) %>
    </div>

    <%= f.submit class: 'btn btn-info'%>
  <% end %>
</div>
