<div class="container">
  <h1 class="my-3">New review</h1>
  <div class="form py-4 border-bottom mb-4">
  <%= simple_form_for [@restaurant, @review] do |f| %>

    <div class="form-group">
      <%= f.input :rating %>
    </div>

    <div class="form-group">
      <%= f.input :content %>
    </div>

    <%= f.submit class: 'btn btn-info'%>
  <% end %>
</div>

</div>
